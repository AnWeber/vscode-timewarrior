{
    "name": "timewarrior",
    "displayName": "timewarrior",
    "description": "add timewarrior commands",
    "version": "0.0.1",
    "publisher": "anweber",
    "license": "ISC",
    "engines": {
        "vscode": "^1.72.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "keywords": [
        "statusbar",
        "command",
        "toolbar"
    ],
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/AnWeber/vscode-timewarrior"
    },
    "bugs": {
        "url": "https://github.com/AnWeber/vscode-timewarrior/issues"
    },
    "main": "./dist/extension.js",
    "capabilities": {
        "virtualWorkspaces": true,
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "contributes": {
        "commands": [
            {
                "command": "timewarrior.start",
                "title": "timew start",
                "category": "timewarrior",
                "icon": "$(play-circle)"
            },
            {
                "command": "timewarrior.startNoTags",
                "title": "timew start (with no tags)",
                "category": "timewarrior",
                "icon": "$(play-circle)"
            },
            {
                "command": "timewarrior.tag",
                "title": "timew tag",
                "category": "timewarrior",
                "icon": "$(tag)"
            },
            {
                "command": "timewarrior.checkIn",
                "title": "timew checkIn",
                "category": "timewarrior",
                "icon": "$(pinned)"
            },
            {
                "command": "timewarrior.stop",
                "title": "timew stop",
                "category": "timewarrior",
                "icon": "$(stop-circle)"
            },
            {
                "command": "timewarrior.refreshHistory",
                "title": "timew refreshHistory",
                "category": "timewarrior",
                "icon": "$(refresh)"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "timewarrior.refreshHistory",
                    "when": "false"
                }
            ],
            "view/title": [
                {
                    "command": "timewarrior.refreshHistory",
                    "when": "view == timewarrior_history",
                    "group": "navigation"
                },
                {
                    "command": "timewarrior.checkIn",
                    "when": "view == timewarrior_history",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Timewarrior",
            "properties": {
                "timewarrior.basePath": {
                    "type": "string",
                    "scope": "application",
                    "description": "folder with timewarrior configuration",
                    "default": "~/.timewarrior"
                },
                "timewarrior.tagStatusBarItem": {
                    "type": "object",
                    "scope": "application",
                    "properties": {
                        "errorOnEmptyTag": {
                            "type": "boolean",
                            "scope": "application",
                            "description": "highlight missing Tag with error background",
                            "default": true
                        },
                        "color":{
                            "type": "string",
                            "scope": "application",
                            "description": "color of StatusBarItem",
                            "default": true
                        }
                    },
                    "description": "settings for Status Bar Item",
                    "default": {
                        "errorOnEmptyTag": true
                    }
                },
                "timewarrior.checkIn": {
                    "type": "object",
                    "scope": "application",
                    "properties": {
                        "tags": {
                            "type": "array",
                            "scope": "application",
                            "description": "list of tags always visible in checkIn Command",
                            "items": {
                                "type": "string",
                                "scope": "application",
                                "description": "tags to use"
                            }
                        },
                        "countRecentlyUsedTags":{
                            "type": "number",
                            "scope": "application",
                            "description": "number of visible recently used tags"
                        }
                    },
                    "description": "settings for CheckInCommand",
                    "default": {
                        "countRecentlyUsedTags": 5
                    }
                }
            }
        },
        "viewsWelcome": [
            {
                "view": "timewarrior_history",
                "contents": "no timewarrior history"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "timewarrior-views",
                    "title": "timewarrior",
                    "icon": "icon.svg"
                }
            ]
        },
        "views": {
            "timewarrior-views": [
                {
                    "id": "timewarrior_history",
                    "name": "History",
                    "visibility": "collapsed"
                }
            ]
        }
    },
    "scripts": {
        "format": "prettier --write --parser typescript \"src/**/*.ts?(x)\"",
        "vscode:prepublish": "npm run compile",
        "esbuild": "esbuild ./src/extension.ts --bundle --outdir=dist/ --sourcemap --platform=node --external:vscode --format=cjs",
        "compile": "npm run esbuild -- --minify",
        "watch": "npm run esbuild -- --sourcemap --watch",
        "tsc-watch": "tsc --watch",
        "lockfile-lint": "lockfile-lint --path package-lock.json --validate-https --allowed-hosts npm --validate-checksum --validate-integrity",
        "eslint": "eslint src --ext ts",
        "lint": "npm run format && npm run eslint && npm run lockfile-lint && tsc --noEmit",
        "prepare": "husky install",
        "package": "npx vsce package"
    },
    "lint-staged": {
        "*.js": [
            "prettier --write"
        ],
        "*.ts?(x)": [
            "eslint --cache --fix",
            "prettier --parser=typescript --write"
        ]
    },
    "devDependencies": {
        "@types/node": "^18.8.5",
        "@types/vscode": "^1.72.0",
        "@typescript-eslint/eslint-plugin": "5.40.0",
        "@typescript-eslint/parser": "5.40.0",
        "esbuild": "^0.15.10",
        "eslint": "^8.25.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "lockfile-lint": "^4.9.6",
        "prettier": "^2.7.1",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "dayjs": "^1.11.5"
    }
}